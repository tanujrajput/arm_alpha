<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="arm_alpha">

  <!-- =============================
       Global Properties (Constants)
       ============================= -->
  <xacro:property name="PI" value="3.14159265359" />   <!-- Pi constant for angles -->
  <xacro:property name="effort" value="30.0" />        <!-- Max joint effort -->
  <xacro:property name="velocity" value="10.0" />      <!-- Max joint velocity -->

  <!-- =============================
       Macros
       ============================= -->
  <!-- Macro to define a default inertial block with given mass.
       Helps avoid repeating inertial definitions across links. -->
  <xacro:macro name="default_inertial" params="mass">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="${mass}" />
      <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0" />
    </inertial>
  </xacro:macro>

  <!-- =============================
       Links (Rigid Bodies)
       ============================= -->
  <link name="world"/>   <!-- Reference world link -->

  <!-- Base link of the robot -->
  <link name="base_link">
    <xacro:default_inertial mass="1.0"/>
    <visual>
      <origin rpy="0 0 0" xyz="-0.5 -0.5 0"/>
      <geometry>
        <mesh filename="package://arm_alpha_description/meshes/basement.STL" scale="0.01 0.01 0.01"/>
      </geometry>
    </visual>
    <collision>
      <origin rpy="0 0 0" xyz="-0.5 -0.5 0"/>
      <geometry>
        <mesh filename="package://arm_alpha_description/meshes/basement.STL" scale="0.01 0.01 0.01"/>
      </geometry>
    </collision>
  </link>

  <!-- Rotating base plate mounted on base_link -->
  <link name="base_plate">
    <xacro:default_inertial mass="0.1"/>
    <visual>
      <origin rpy="0 0 0" xyz="-0.39 -0.39 -0.56"/>
      <geometry>
        <mesh filename="package://arm_alpha_description/meshes/base_plate.STL" scale="0.01 0.01 0.01"/>
      </geometry>
    </visual>
    <collision>
      <origin rpy="0 0 0" xyz="-0.39 -0.39 -0.56"/>
      <geometry>
        <mesh filename="package://arm_alpha_description/meshes/base_plate.STL" scale="0.01 0.01 0.01"/>
      </geometry>
    </collision>
  </link>

  <!-- Forward drive arm -->
  <link name="forward_drive_arm">
    <xacro:default_inertial mass="0.1"/>
    <visual>
      <origin rpy="0 -${PI / 2} ${PI / 2}" xyz="0.19 0.06 -0.08"/>
      <geometry>
        <mesh filename="package://arm_alpha_description/meshes/forward_drive_arm.STL" scale="0.01 0.01 0.01"/>
      </geometry>
    </visual>
    <collision>
      <origin rpy="0 -${PI / 2} ${PI / 2}" xyz="0.19 0.06 -0.08"/>
      <geometry>
        <mesh filename="package://arm_alpha_description/meshes/forward_drive_arm.STL" scale="0.01 0.01 0.01"/>
      </geometry>
    </collision>
  </link>

  <!-- Horizontal arm -->
  <link name="horizontal_arm">
    <xacro:default_inertial mass="0.1"/>
    <visual>
      <origin rpy="${PI / 2} 0 ${PI / 2}" xyz="-0.03 -0.4 -0.06"/>
      <geometry>
        <mesh filename="package://arm_alpha_description/meshes/horizontal_arm.STL" scale="0.01 0.01 0.01"/>
      </geometry>
    </visual>
    <collision>
      <origin rpy="${PI / 2} 0 ${PI / 2}" xyz="-0.03 -0.4 -0.06"/>
      <geometry>
        <mesh filename="package://arm_alpha_description/meshes/horizontal_arm.STL" scale="0.01 0.01 0.01"/>
      </geometry>
    </collision>
  </link>

  <!-- Claw support block (mount for grippers) -->
  <link name="claw_support">
    <xacro:default_inertial mass="0.05"/>
    <visual>
      <origin rpy="0 0 ${PI / 2}" xyz="0 -0.05 -0.15"/>
      <geometry>
        <mesh filename="package://arm_alpha_description/meshes/claw_support.STL" scale="0.01 0.01 0.01"/>
      </geometry>
    </visual>
    <collision>
      <origin rpy="0 0 ${PI / 2}" xyz="0 -0.05 -0.15"/>
      <geometry>
        <mesh filename="package://arm_alpha_description/meshes/claw_support.STL" scale="0.01 0.01 0.01"/>
      </geometry>
    </collision>
  </link>

  <!-- Right finger of gripper -->
  <link name="gripper_right">
    <xacro:default_inertial mass="0.01"/>
    <visual>
      <origin rpy="0 0 -${PI / 2}" xyz="-0.1 0.50 -0.1"/>
      <geometry>
        <mesh filename="package://arm_alpha_description/meshes/right_finger.STL" scale="0.01 0.01 0.01"/>
      </geometry>
    </visual>
    <collision>
      <origin rpy="0 0 -${PI / 2}" xyz="-0.1 0.50 -0.1"/>
      <geometry>
        <mesh filename="package://arm_alpha_description/meshes/right_finger.STL" scale="0.01 0.01 0.01"/>
      </geometry>
    </collision>
  </link>

  <!-- Left finger of gripper -->
  <link name="gripper_left">
    <xacro:default_inertial mass="0.01"/>
    <visual>
      <origin rpy="0 0 -${PI / 2}" xyz="-0.04 0.50 -0.1"/>
      <geometry>
        <mesh filename="package://arm_alpha_description/meshes/left_finger.STL" scale="0.01 0.01 0.01"/>
      </geometry>
    </visual>
    <collision>
      <origin rpy="0 0 -${PI / 2}" xyz="-0.04 0.50 -0.1"/>
      <geometry>
        <mesh filename="package://arm_alpha_description/meshes/left_finger.STL" scale="0.01 0.01 0.01"/>
      </geometry>
    </collision>
  </link>


  <!-- =============================
       Joints (Connections Between Links)
       ============================= -->

  <!-- Fixed joint connecting world to base_link -->
  <joint name="virtual_joint" type="fixed">
    <parent link="world"/>
    <child link="base_link"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
  </joint>

  <!-- Joint 1: Rotation of base_plate around Z-axis -->
  <joint name ="joint_1" type="revolute">
    <parent link="base_link"/>
    <child link="base_plate"/>
    <origin xyz="0 0 0.307"/>
    <axis xyz="0 0 1"/>
    <limit lower="-${PI / 2}" upper="${PI / 2}" effort="${effort}" velocity="${velocity}"/>
  </joint>

  <!-- Joint 2: Rotation of forward_drive_arm around X-axis -->
  <joint name ="joint_2" type="revolute">
    <parent link="base_plate"/>
    <child link="forward_drive_arm"/>
    <origin xyz="-0.02 0 0.35"/>
    <axis xyz="1 0 0"/>
    <limit lower="-${PI / 2}" upper="${PI / 2}" effort="${effort}" velocity="${velocity}"/>
  </joint>

  <!-- Joint 3: Rotation of horizontal_arm around X-axis -->
  <joint name ="joint_3" type="revolute">
    <parent link="forward_drive_arm"/>
    <child link="horizontal_arm"/>
    <origin xyz="0 0 0.8"/>
    <axis xyz="1 0 0"/>
    <limit lower="-${PI / 2}" upper="${PI / 2}" effort="${effort}" velocity="${velocity}"/>
  </joint>

  <!-- Fixed joint: horizontal_arm to claw_support -->
  <joint name="horizontal_arm_to_claw_support" type="fixed">
    <parent link="horizontal_arm"/>
    <child link="claw_support"/>
    <origin xyz="0 0.82 0"/>
  </joint>

  <!-- Joint 4: Right gripper finger rotation around Z-axis -->
  <joint name ="joint_4" type="revolute">
    <parent link="claw_support"/>
    <child link="gripper_right"/>
    <origin xyz="-0.04 0.13 -0.1"/>
    <axis xyz="0 0 1"/>
    <limit lower="-${PI / 2}" upper="0.0" effort="${effort}" velocity="${velocity}"/>
  </joint>

  <!-- Joint 5: Left gripper finger rotation around Z-axis
       - Mimics Joint 4 with opposite direction (multiplier = -1) -->
  <joint name ="joint_5" type="revolute">
    <parent link="claw_support"/>
    <child link="gripper_left"/>
    <origin xyz="-0.22 0.13 -0.1"/>
    <axis xyz="0 0 1"/>
    <limit lower="0.0" upper="${PI / 2}" effort="${effort}" velocity="${velocity}"/>
    <mimic joint="joint_4" multiplier="-1"/>
  </joint>

</robot>
